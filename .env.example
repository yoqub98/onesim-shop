
# Supabase Configuration (Frontend - safe to bundle)
REACT_APP_SUPABASE_URL=your_supabase_project_url
REACT_APP_SUPABASE_ANON_KEY=your_supabase_anon_key
REACT_APP_API_BASE=http://localhost:5000/api
REACT_APP_ENABLE_GOOGLE_AUTH=true

# Server-side only (for backend/server.js)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Email Configuration (for server.js - optional for local dev)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Webhook Configuration (register this URL in eSIMAccess dashboard)
# Production: https://your-domain.vercel.app/api/webhook/esim
# Development: Use ngrok or similar to expose localhost
# Sync Secret (for cron job authentication)
SYNC_SECRET_KEY=generate_random_secret_key_here
